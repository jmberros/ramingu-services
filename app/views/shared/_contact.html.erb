<div class='section-body'>
  <div class='row service wow bounceInUp'>
    <div class='col-md-6 col-md-offset-3 col-xs-12'>
      <h1>
        <%= t 'contact_form.title' %>
        <i class="fa fa-envelope-o"></i>
      </h1>

      <p>
        <%= t 'contact_form.write_me_at' %> <span id='mail'></span>
      </p>
      <p>
        <%= t 'contact_form.or_use_this_form' %>
      </p>

      <div class='alert'></div>
      <%= form_tag contact_path, id: 'contact-form', remote: true, authenticity_token: true, format: :json do %>
        <div class="form-group">
          <%= label_tag 'name', t('contact_form.name') %>
          <%= text_field_tag 'name', nil, class: 'form-control', placeholder: t('contact_form.name_placeholder') %>
        </div>

        <div class="form-group">
          <%= label_tag 'email', t('contact_form.email') %>
          <%= text_field_tag 'email', nil, class: 'form-control', placeholder: t('contact_form.email_placeholder') %>
        </div>

        <div class="form-group">
          <%= label_tag 'contact_reason', t('contact_form.contact_reason') %>
          <%= select_tag 'contact_reason', options_for_select(@contact_reasons), class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= label_tag 'message', t('contact_form.message') %>
          <%= text_area_tag 'message', nil, rows: 6, class: 'form-control', placeholder: t('contact_form.message_placeholder') %>
        </div>

        <%= button_tag t('contact_form.send'), type: 'submit', class: 'btn btn-lg' %>
      <% end %>
    </div>
  </div>
</div>
